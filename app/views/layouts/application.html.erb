<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
       <div class="container">
        <a class="navbar-brand" href="/">
            <span>Bookers</span>
            </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="#navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse show" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
                <% if user_signed_in? %>
                    <li class="nav-item">
                        <%= link_to user_path(current_user.id) do %>
                            <i class="nav-link fas fa-home">Home</i>
                        <% end %>
                    </li>
                    <li class="nav-item">
                        <%= link_to users_path do %>
                            <i class="nav-link fas fa-users">Users</i>
                        <% end %>
                    </li>
                    <li class="nav-item">
                        <%= link_to books_path do %>
                            <i class="nav-link fas fa-book-open">Books</i>
                        <% end %>
                    </li>
                    <li class="nav-item">
                        <%= link_to destroy_user_session_path, method: :delete do %>
                            <i class="nav-link fas fa-sign-out-alt">logout</i>
                        <% end %>
                    </li>
                <% else %>
                    <li class="nav-item">
                        <%= link_to root_path do %>
                            <i class="nav-link fas fa-home">Home</i>
                        <% end %>
                    </li>
                    <li class="nav-item">
                        <%= link_to home_about_path do %>
                            <i class="nav-link fas fa-link">About</i>
                        <% end %>
                    </li>
                    <li class="nav-item">
                        <%= link_to new_user_registration_path do %>
                            <i class="nav-link fas fa-user-plus">sign up</i>
                        <% end %>
                    </li>
                    <li class="nav-item">
                        <%= link_to new_user_session_path do %>
                            <i class="nav-link fas fa-sign-in-alt">login</i>
                        <% end %>
                    </li>
                <% end %>
            </ul>
        </div>
      </div>
     </nav>
    </header>

      <%= yield %>
     <footer>
        <div class="container mt-5">
  	     <div class="row">
    	    <div class="mx-auto">
    		   <p>CopyRight Infratop.inc</p>
    	   </div>
         </div>
       </div>
    </footer>
      </div>
    </div>
  </body>